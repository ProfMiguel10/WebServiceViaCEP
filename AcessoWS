package exemplo;

import com.google.gson.Gson;

import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.net.HttpURLConnection;
import java.net.URL;

public class AcessoWS {
	
	public static Endereco buscaEnderecoPelo(String cep) throws Exception {
		String wS = "http://viacep.com.br/ws/";
		String urlWB = wS + cep + "/json";
		try {
			URL url = new URL(urlWB);
			HttpURLConnection con = (HttpURLConnection) url.openConnection();
			if (con.getResponseCode() != 200)
				throw new RuntimeException("CÃ³digo de Erro : " + con.getResponseCode());
			BufferedReader res = new BufferedReader(new InputStreamReader((con.getInputStream())));
			String jsonToString = Conversor.jsonToString(res);
			Gson gson = new Gson();
			Endereco endereco = gson.fromJson(jsonToString, Endereco.class);
			return endereco;
		} catch (Exception e) {
			throw new Exception("ERRO: " + e);
		}
	}
}
